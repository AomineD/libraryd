<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
  android:background="@color/tran"
    android:layout_height="wrap_content">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">

    </android.support.v7.widget.CardView>
    <ImageView
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="210dp"
        android:layout_height="210dp"
        app:srcCompat="@drawable/loading_ic"
        android:id="@+id/img_big"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@id/img_big"
        android:layout_marginTop="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/linl"
            android:orientation="vertical">


            <TextView
                android:id="@+id/title_text_share"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:padding="3dp"
                android:text="Titulo"
                android:textColor="@color/text_title_share"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/desc_text_share"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:padding="3dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam non nunc consectetur, sollicitudin eros eget, tincidunt massa. Nunc et justo turpis. Etiam porta, nunc sit amet malesuada sagittis, orci nisl vestibulum mauris"
                android:textColor="@color/text_title_share"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="8dp">

                <TextView
                    android:id="@+id/share_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Share"
                    android:textColor="@color/text_title_share"
                    android:textSize="14sp" />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="8dp">

                <TextView
                    android:id="@+id/cancel_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Cancel"
                    android:textColor="@color/text_title_share"
                    android:textSize="14sp" />


            </android.support.v7.widget.CardView>

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>